
@model StackOverflowProject.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "View Questions";
}

<div class="row">
    <div class="col-sm-12">
        <div class="form-group form-row">
            <div class="col-sm-10 offset-sm-2">
                <h3>@Model.QuestionName</h3>
                <div class="row">
                    <div class="col-sm-2">
                        <span class="badge badge-info">@ViewBag.CName</span>
                    </div>
                    <div class="col-sm-2">
                        <span class="text-info">
                            @if (Convert.ToInt32(Session["CurrentUserID"]) != Model.UserID)
                            {
                                @:by @Model.UserName
                            }
                            else
                            {
                                @:by You
                            }
                        </span>
                    </div>
                    <div class="col-sm-3">
                        <span class="text-success">by @Model.QuestionDateAndTime</span>
                    </div>
                    <div class="col-sm-2">
                        <span class="badge badge-pill badge-success col-sm-5">
                            @Model.ViewsCount
                        </span>
                        Views
                    </div>
                </div>
                @if(Model.AnswersCount == 0)
                {
                    <p class="text-danger">No Answer Yet!</p>
                }
            </div>           
        </div>
        @if (Model.AnswersCount > 0)
         {
            <div class="form-group form-row">
                <div class="col-sm-2">
                    <span class="badge badge-secondary col-2 votescount">
                        @ViewBag.AnswerVote
                    </span>
                    Votes

                    @if (Session["CurrentUserName"] != null)
                    {
                        <img src="~/Images/upvote.jpg" class="btnUpVote" style="cursor:pointer" width="24px"/>
                        <img src="~/Images/downvote.png" class="btnUpVote" style="cursor:pointer" width="24px"/>
                    }

                </div>
            </div>
         }
    </div>
</div>